<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="30dp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rectangle_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Sebagai"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black_70"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edt_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama file"
        android:background="@drawable/bg_rectangle_white_12"
        android:elevation="4dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="6dp"
        android:layout_marginTop="8sp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black_70"
        android:layout_marginHorizontal="24dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Batal"
            android:layout_marginBottom="4dp"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:background="@drawable/bg_rectangle_white_12"
            android:textSize="12sp"/>

        <Space
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Unggah"
            android:layout_marginBottom="4dp"
            android:textAllCaps="false"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:background="@drawable/bg_rectangle_white_50"
            android:layout_gravity="end"/>

    </LinearLayout>
</LinearLayout>